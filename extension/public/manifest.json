{
  "manifest_version": 3,
  "name": "SkinSense",
  "version": "0.1.0",
  "description": "AI-powered skincare product analysis",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
